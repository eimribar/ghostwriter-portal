# Supabase Configuration
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key

# LLM API Keys (Gemini is primary, others optional)
VITE_GOOGLE_API_KEY=AIza...  # Required: Google Gemini 2.5 Pro API key
VITE_OPENAI_API_KEY=sk-...  # Optional: OpenAI GPT-5 for ideation
VITE_ANTHROPIC_API_KEY=sk-ant-...  # Optional: Anthropic Claude

# GPT-5 Specific Settings
VITE_GPT5_MODEL=gpt-5  # Options: gpt-5, gpt-5-mini, gpt-5-nano
VITE_GPT5_REASONING_EFFORT=medium  # Options: minimal, low, medium, high
VITE_GPT5_VERBOSITY=high  # Options: low, medium, high

# Apify Configuration
VITE_APIFY_API_KEY=apify_api_...

# Optional: Cloudinary for media uploads
VITE_CLOUDINARY_CLOUD_NAME=your-cloud-name
VITE_CLOUDINARY_API_KEY=your-api-key
VITE_CLOUDINARY_API_SECRET=your-api-secret

# Optional: Email service (SendGrid/Resend)
VITE_EMAIL_API_KEY=your-email-api-key
VITE_EMAIL_FROM=noreply@yourcompany.com

# Feature Flags
VITE_ENABLE_AUTO_APPROVE=false
VITE_ENABLE_REAL_PUBLISH=false
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_GOOGLE_GROUNDING=true  # Enable/disable Google Grounding (default: true)

# Development/Production
VITE_ENV=development